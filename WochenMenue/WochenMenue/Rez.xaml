<Window x:Class="WochenMenue.Rez"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WochenMenue"
        mc:Ignorable="d"
        Title="Rezept" Height="450" Width="800">
    <Grid>

        <Button x:Name="btn_0" Content="Rezept Speichern" FontSize="18" Width="150" Background="LightGreen" Height="50" Margin="632,359,10,10" Click="btn_0_Click"></Button>

        
        <DataGrid AutoGenerateColumns="False" Height="399" HorizontalAlignment="Left" Margin="10,10,178,10" Name="lsV" VerticalAlignment="Top" Width="604">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Zutat" Width="120" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Menge" Width="60" Binding="{Binding Menge}"></DataGridTextColumn>
                <DataGridTextColumn Header="Einheit" Width="60" Binding="{Binding Einheit}"></DataGridTextColumn>
                
            </DataGrid.Columns>

        </DataGrid>



    </Grid>
</Window>
